{
	"manifest_version":2,
	"name":"Deezer Mediakeys Reloaded",
	"version":"0.2",
	"description":"Enable mediakeys when on Deezer but also from other tabs.",
	"permissions":["tabs","http://*/*","https://*/*"],
	"background":{
		"scripts":[
			"js/jquery-1.7.2.min.js",
			"js/const.js",
			"background.js"
		]
	},
	"options_page":"options.html",
	"icons":{
		"16":"img/icon_16.png",
		"128":"img/icon_128.png"
	},
	"content_scripts":[
		{
		  "matches": ["http://*/*","https://*/*"],
		  "permissions":["tabs","http://*/*","https://*/*"],
		  "js": ["js/jquery-1.7.2.min.js","js/dzmkv2.js"],
		  "run_at": "document_idle"
		}
	]
}